section.product
  .container
    .product__subtitle.subtitle Товары от студии Архипова
    h2.product__title.title Мой личный бренд
    ul.product__list
      each item in locals.products
        li.product__item
          img(src=`${item.src}`).product__img
          .product__hover
            .product__description
              .product__name= item.name
              .product__price= `$ ${item.price}`
